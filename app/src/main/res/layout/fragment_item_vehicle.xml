<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llVehicleItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="2dp"
    android:layout_marginStart="2dp"
    tools:context=".ui.vehicle.VehicleFragment">

    <ImageView
        android:id="@+id/imVehicleType"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:layout_marginRight="3dp"
        android:layout_marginEnd="3dp"
        android:contentDescription="@string/Vehicle_Type" />

    <TextView
        android:id="@+id/txtPlate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="2.5"
        android:gravity="center_vertical"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp" />

    <TextView
        android:id="@+id/txtShortName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="2.2"
        android:gravity="center_vertical" />

    <ImageButton
        android:id="@+id/btnPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:contentDescription="@string/bt_maintenance_plan"
        app:srcCompat="@drawable/ic_menu_maintenance_plan" />

    <ImageButton
        android:id="@+id/btnRefuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:contentDescription="@string/bt_Refuel"
        app:srcCompat="@drawable/ic_supply" />

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:contentDescription="@string/bt_Edit"
        app:srcCompat="@drawable/ic_menu_edit" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:contentDescription="@string/bt_Delete"
        app:srcCompat="@drawable/ic_menu_delete" />

</LinearLayout>