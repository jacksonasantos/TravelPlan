<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundDialog"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorBackgroundCard"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/cardElevation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/labels_margin">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/labels_space_top"
                android:gravity="center"
                android:text="@string/Itinerary"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/Itinerary_Sequence"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp"  />
                <EditText
                    android:id="@+id/etSequence"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:autofillHints="no"
                    android:inputType="number"
                    tools:ignore="LabelFor"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:text="@string/Itinerary_Date"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp"  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/Itinerary_Source"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/etOrig_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:autofillHints="no"
                    android:inputType="textCapSentences"
                    tools:ignore="LabelFor"
                    android:textSize="12sp"  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/Itinerary_Target"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/etDest_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:autofillHints="no"
                    android:inputType="textCapSentences"
                    tools:ignore="LabelFor"
                    android:textSize="12sp"  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/Itinerary_Travel_Mode"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp" />
                <Spinner
                    android:id="@+id/spTravel_mode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:layout_gravity="center"
                    android:autofillHints="no"
                    android:entries="@array/travel_mode_array"
                    android:textSize="12sp"  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/Itinerary_Daily"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/etDaily"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="end"
                    android:autofillHints="no"
                    android:inputType="number"
                    tools:ignore="LabelFor"
                    android:textSize="12sp"  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/Itinerary_Time"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/etTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:autofillHints="no"
                    android:inputType="number"
                    tools:ignore="LabelFor"
                    android:textSize="12sp"  />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/Itinerary_Distance"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/etDistance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:autofillHints="no"
                    android:inputType="number"
                    tools:ignore="LabelFor"
                    android:textSize="12sp"  />
                <TextView
                    android:id="@+id/tvMeasureIndex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:autofillHints="no"
                    android:textSize="12sp"  />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/labels_margin"
        app:cardBackgroundColor="@color/colorBackgroundCard"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/cardElevation">
        <LinearLayout
            android:id="@+id/llItineraryHasTransport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/labels_margin">
            <TextView
                android:id="@+id/tvTransportPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/labels_space_top"
                android:gravity="center"
                android:text="@string/Itinerary_has_Transport"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textSize="14sp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvItineraryHasTransport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/labels_space_top"
                android:layout_gravity="center"
                android:scrollbars="vertical"
                android:nextFocusDown="@+id/rvMarker"
                tools:itemCount="1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/labels_margin"
        app:cardBackgroundColor="@color/colorBackgroundCard"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/cardElevation">
        <LinearLayout
            android:id="@+id/llMarker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/labels_margin">
            <TextView
                android:id="@+id/tvMarker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/labels_space_top"
                android:gravity="center"
                android:text="@string/marker"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textSize="14sp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMarker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/labels_space_top"
                android:layout_gravity="center"
                android:scrollbars="vertical"
                android:nextFocusDown="@+id/btnSave"
                tools:itemCount="1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="@string/bt_Save" />
</LinearLayout>