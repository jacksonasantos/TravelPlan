<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llVehicleTravelItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtVehicle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.13"
        android:layout_marginEnd="@dimen/labels_margin"
        android:gravity="start|center_vertical"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        app:autoSizeMaxTextSize="10sp"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform" />
    <TextView
        android:id="@+id/txtSupplyDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.17"
        android:layout_marginEnd="@dimen/labels_margin"
        android:gravity="start|center"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        app:autoSizeMaxTextSize="10sp"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/labels_margin"
        android:layout_weight="0.30"
        android:gravity="start|center_vertical"
        android:textSize="10sp"
        app:autoSizeMaxTextSize="10sp"
        app:autoSizeMinTextSize="4sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        tools:ignore="SmallSp" />
    <TextView
        android:id="@+id/txtNumberLiters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.10"
        android:layout_marginEnd="@dimen/labels_margin"
        android:gravity="end|center_vertical"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        app:autoSizeMaxTextSize="10sp"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform" />
    <TextView
        android:id="@+id/txtTravelledDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.13"
        android:layout_marginEnd="@dimen/labels_margin"
        android:gravity="end|center_vertical"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        app:autoSizeMaxTextSize="10sp"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform" />
    <TextView
        android:id="@+id/txtAvgConsumption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.17"
        android:layout_marginEnd="@dimen/labels_margin"
        android:gravity="end|center_vertical"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        app:autoSizeMaxTextSize="10sp"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform" />
</LinearLayout>