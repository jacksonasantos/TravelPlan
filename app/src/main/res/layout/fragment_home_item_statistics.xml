<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llStatisticsItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/txtReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="start|center_vertical"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtAVGCostLitre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/labels_marginLeft"
        android:layout_marginLeft="@dimen/labels_marginLeft"
        android:layout_weight="0.3"
        android:gravity="center_vertical|start" />

    <TextView
        android:id="@+id/txtAVGConsumption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/labels_marginLeft"
        android:layout_marginLeft="@dimen/labels_marginLeft"
        android:layout_weight="0.2"
        android:gravity="center_vertical|end" />

    <TextView
        android:id="@+id/txtMeasureConsumption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/labels_marginLeft"
        android:layout_marginLeft="@dimen/labels_marginLeft"
        android:layout_weight="0.2"
        android:gravity="start|center_vertical" />

</LinearLayout>

