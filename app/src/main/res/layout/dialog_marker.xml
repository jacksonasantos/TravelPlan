<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundDialog"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/labels_space_top"
        app:cardBackgroundColor="@color/colorBackgroundCard"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/cardElevation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/labels_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/marker_latlng"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/tvLat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:autofillHints="no"
                        android:minLines="1"
                        android:textSize="10sp"
                        tools:ignore="LabelFor,SmallSp" />

                    <TextView
                        android:id="@+id/tvLng"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:autofillHints="no"
                        android:textSize="10sp"
                        tools:ignore="LabelFor,SmallSp" />

                    <TextView
                        android:id="@+id/tvZoom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:autofillHints="no"
                        android:textSize="10sp"
                        tools:ignore="LabelFor,SmallSp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/marker_name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:autofillHints="no"
                        tools:ignore="LabelFor,SmallSp"
                        android:textSize="10sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/marker_address"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:autofillHints="no"
                        tools:ignore="LabelFor,SmallSp"
                        android:textSize="10sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/marker_city"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/tvCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:autofillHints="no"
                        tools:ignore="LabelFor,SmallSp"
                        android:textSize="10sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/marker_state"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/tvState"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:autofillHints="no"
                        tools:ignore="LabelFor,SmallSp"
                        android:textSize="10sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/marker_country"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/tvAbbrCountry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:autofillHints="no"
                        tools:ignore="LabelFor,SmallSp"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/tvCountry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:autofillHints="no"
                        tools:ignore="LabelFor,SmallSp"
                        android:textSize="10sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/marker_category"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:autofillHints="no"
                        tools:ignore="LabelFor,SmallSp"
                        android:textSize="10sp" />
                </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/labels_space_top"
        android:layout_marginBottom="@dimen/labels_space_top"
        app:cardBackgroundColor="@color/colorBackgroundCard"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/cardElevation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/labels_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/marker_itinerary"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    tools:ignore="SmallSp" />
                <Spinner
                    android:id="@+id/spinItinerary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="@string/marker_itinerary"
                    android:textSize="10sp"
                    tools:ignore="SmallSp">
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/marker_type"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    tools:ignore="SmallSp" />

                <Spinner
                    android:id="@+id/spinMarkerType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:entries="@array/marker_type_array"
                    android:text="@string/marker_type"
                    android:textSize="10sp"
                    tools:ignore="SmallSp">

                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/marker_achievement"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    tools:ignore="SmallSp" />

                <Spinner
                    android:id="@+id/spinMarkerAchievement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="@string/marker_achievement"
                    android:textSize="10sp"
                    tools:ignore="SmallSp">

                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/marker_sequence"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
                <EditText
                    android:id="@+id/etSeq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:autofillHints="no"
                    android:inputType="number"
                    tools:ignore="LabelFor,SmallSp"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/marker_description"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:autofillHints="no"
                    android:inputType="textCapSentences"
                    tools:ignore="LabelFor,SmallSp"
                    android:textSize="10sp"  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/marker_expected_value"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
                <EditText
                    android:id="@+id/etExpectedValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:autofillHints="no"
                    android:inputType="numberDecimal"
                    android:textSize="10sp"
                    tools:ignore="LabelFor,SmallSp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/labels_space_top"
        app:cardBackgroundColor="@color/colorBackgroundCard"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/cardElevation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/labels_margin">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListMarkers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>