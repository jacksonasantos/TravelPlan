<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/personal_header">
        <EditTextPreference
            app:key="personal_name"
            app:title="@string/personal_name"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="personal_age"
            app:title="@string/personal_age"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:defaultValue="gender"
            app:entries="@array/gender"
            app:entryValues="@array/gender"
            app:key="gender"
            app:title="@string/personal_gender"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="signature"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/definition_header">
         <SwitchPreferenceCompat
             app:key="color_scheme_dark"
             app:title="@string/color_scheme_dark_title"
             app:summaryOff="@string/color_scheme_off"
             app:summaryOn="@string/color_scheme_on" />
        <ListPreference
            app:defaultValue="@string/languages_default"
            app:entries="@array/languages"
            app:entryValues="@array/languagesValues"
            app:key="language"
            app:title="@string/language"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/preferences_header">
        <ListPreference
            app:entries="@array/vehicle_array"
            app:entryValues="@array/vehicle_arrayValues"
            app:key="vehicle_default"
            app:title="@string/vehicle_default"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:entries="@array/travel_array"
            app:entryValues="@array/travel_arrayValues"
            app:key="travel_default"
            app:title="@string/travel_default"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

 </PreferenceScreen>